[alias]
	ci = commit
	st = status
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	diffw = diff --word-diff
	dc = diff --cached
	amend = commit --amend
	ff = merge --ff-only
	pullff = pull --ff-only
	fa = fetch --all
[color]
	ui = true
[branch]
	autosetupmerge = false
[core]
	excludesfile = ~/.gitignore_global
