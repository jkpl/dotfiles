general {
        colors = true
        interval = 5
}

order += "volume master"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "load"
order += "tztime local"

volume master {
        format = " %volume"
        format_muted = " %volume"
        device = "pulse"
}

wireless _first_ {
        format_up = " %quality %essid"
        format_down = " down"
}

ethernet _first_ {
        format_up = " up"
        format_down = " down"
}

battery all {
    hide_seconds = true
    integer_battery_capacity = true
    format = "%status %percentage %remaining"
    format_down = ""
    status_chr = "  "
    status_bat = " "
    status_full = ""
}

load {
    format = " %1min"
}

tztime local {
        format = "%Y-%m-%d %H:%M"
}
